{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build yuki release",
            "group": "build",
            "command": "cargo",
            "args": [
                "+nightly",
                "build",
                "--release",
            ],
            "options": {
                "cwd": "${workspaceRoot}/yuki",
                "env": {
                    "RUSTFLAGS": "-g"
                }
            },
            "problemMatcher": [
                "$rustc"
            ]
        },
        {
            "label": "Build yuki debug",
            "group": "build",
            "command": "cargo",
            "args": [
                "+nightly",
                "build",
            ],
            "options": {
                "cwd": "${workspaceRoot}/yuki",
                "env": {
                    "RUSTFLAGS": "-g"
                }
            },
            "problemMatcher": [
                "$rustc"
            ]
        },
        {
            "label": "Check yuki",
            "group": "build",
            "command": "cargo",
            "args": [
                "+nightly",
                "check",
                "--bin",
                "yuki"
            ],
            "options": {
                "cwd": "${workspaceRoot}/yuki"
            },
            "problemMatcher": [
                "$rustc"
            ]
        },
        {
            "label": "Build bench",
            "group": "build",
            "command": "cargo",
            "args": [
                "+nightly",
                "build",
                "--release"
            ],
            "options": {
                "cwd": "${workspaceRoot}/bench",
                "env": {
                    "RUSTFLAGS": "-g"
                }
            },
            "problemMatcher": [
                "$rustc"
            ]
        },
        {
            "label": "Cargo Test",
            "group": "build",
            "command": "cargo",
            "args": [
                "+nightly",
                "test",
                "tests"
            ],
            "options": {
                "cwd": "${workspaceRoot}"
            },
            "problemMatcher": [
                "$rustc"
            ]
        },
        {
            "label": "Build Core Docs",
            "group": "build",
            "command": "cargo",
            "args": [
                "+nightly",
                "doc",
                "--open"
            ],
            "options": {
                "cwd": "${workspaceRoot}"
            },
            "problemMatcher": [
                "$rustc"
            ]
        }
    ]
}
