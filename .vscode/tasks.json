{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build bench",
            "group": "build",
            "command": "cargo",
            "args": [
                "build",
                "--release"
            ],
            "options": {
                "cwd": "${workspaceRoot}/bench",
            },
            "problemMatcher": [
                "$rustc"
            ]
        },
        {
            "label": "Cargo Test",
            "group": "build",
            "command": "cargo",
            "args": [
                "+nightly",
                "test",
                "tests"
            ],
            "options": {
                "cwd": "${workspaceRoot}"
            },
            "problemMatcher": [
                "$rustc"
            ]
        },
        {
            "label": "Build Core Docs",
            "group": "build",
            "command": "cargo",
            "args": [
                "doc",
                "--open"
            ],
            "options": {
                "cwd": "${workspaceRoot}"
            },
            "problemMatcher": [
                "$rustc"
            ]
        }
    ]
}
